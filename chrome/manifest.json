{
    "manifest_version": 3,
    "name": "CV Analyzer",
    "version": "1.0",
    "description": "Analyze Job Description against your CV",
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "settings.html",
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus",
      "clipboardWrite",
      "clipboardRead"
    ],
    "content_security_policy": {
        "default-src": "'self'",
        "connect-src": "https://api.openai.com/"
    },
    "action": {
      "default_popup": "settings.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}
  